   pipeline {
       agent {
           docker {
               image 'golang:latest'
               args '-v /go:/go'
           }
       }
       stages {
           stage('Build') {
               steps {
                   sh 'go build -o app hw.go'
               }
           }
           stage('Run') {
               steps {
                   sh './app'
               }
           }
       }
   }