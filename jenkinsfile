pipeline {
    agent {
        docker {
            image 'docker:latest'
            args '-v /var/run/docker.sock:/var/run/docker.sock -v /tmp:/tmp -v /tmp/kubeconfig:/tmp/kubeconfig:rw'
        }
    }
    environment {
        HOME = "${env.WORKSPACE}"
        KUBECONFIG = "/tmp/kubeconfig"
    }
    stages {
        stage('Build') {
            steps {
                checkout scm
                sh 'docker build -t myapp .'
            }
        }
        stage('Run') {
            steps {
                sh 'docker run myapp'
            }
        }
        stage('Deploy to Kubernetes') {
            steps {
                script {
                    sh 'kubectl --kubeconfig=/tmp/kubeconfig apply -f k8s/'
                }
            }
        }
    }
}