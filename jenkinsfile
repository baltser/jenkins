pipeline {
    agent {
        docker {
            image 'docker:latest'
            args '-v /var/run/docker.sock:/var/run/docker.sock -v /tmp:/tmp -u root'
        }
    }
    stages {
        stage('Build') {
            steps {
                checkout scm
                sh 'docker build -t myapp .'
            }
        }
        stage('Run') {
            steps {
                sh 'docker run myapp'
                sh 'docker logs myapp'
            }
        }
    }
}