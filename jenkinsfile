pipeline {
    agent {
        docker {
            image 'docker:latest'
            args '-v /var/run/docker.sock:/var/run/docker.sock -v /tmp:/tmp -v /var/jenkins_home/.kube/config:/tmp/kubeconfig:ro -u root'
        }
    }
    stages {
        stage('Build') {
            steps {
                checkout scm
                sh 'docker build -t myapp .'
            }
        }
        stage('Run') {
            steps {
                sh 'docker run myapp'
            }
        }
        stage('Deploy to Kubernetes') {
            steps {
                script {
                    sh 'apk add --no-cache kubectl'
                    sh 'kubectl --validate=false apply -f k8s/'
                }
            }
        }
    }
}